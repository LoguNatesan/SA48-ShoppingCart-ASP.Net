@model ShoppingCart.Models.GalleryDetails
@using ShoppingCart.Models

@{
    var products = (List<GalleryDetails>)ViewData["products"];

}

@using (Html.BeginForm("GetGallery","GalleryDetails",FormMethod.Post))
<table>
    <tr>

        @foreach (var d in products)
        {
            <td>
                <table style="border-color:black ;height:20%;width:20%">
                    <tr><td>@d.ImageUrl" /></td></tr>
                    <br>
                    <tr><td><b>@d.ProductName </b></td></tr>
                    <br>
                    <tr><td>@d.Description</td></tr>
                    <br>
                    <tr><td><input type="button" value="@d.Price - Add to Cart" /></td> </tr>

                </table>
            </td>
         }

    </tr>
</table>
}

